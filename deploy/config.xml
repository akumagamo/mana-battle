<?xml version='1.0' encoding='utf-8'?>
<widget id="com.compose.manabattle" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Mana Battle</name>
    <description>
      A fantasy RTS/RPG. Lead your groups of heroes to victory!
    </description>
    <author email="leonardo.farroco@gmail.com" href="http://cordova.io">
        Leonardo de Oliveira Farroco
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
      <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="Fullscreen" value="true" />
    <preference name="orientation" value="landscape" />
</widget>

